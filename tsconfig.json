{
	"extends": "@sapphire/ts-config",
	"compilerOptions": {
		"baseUrl": "./",
		"esModuleInterop": false,
		"experimentalDecorators": true,
		"lib": ["esnext"],
		"noImplicitReturns": false,
		"noImplicitAny": false,
		"outDir": "dist",
		"removeComments": false,
		"incremental": true,
		"rootDir": "./src",
		"skipLibCheck": true,
		"strict": false,
		"tsBuildInfoFile": "dist/.tsbuildinfo",
	},
	"include": ["src"],
	"exclude": ["node_modules/*", "dist/*"]
}
